.button
  position relative
  top 0
  display inline-block
  padding 0 1.1rem
  line-height 2rem
  border 0
  background #e02328
  color white
  font-size 1rem
  text-align center
  cursor pointer
  text-decoration none
  //border-radius 2px
  transition .2s
  &:hover
    background #c81e1e
  &_block
    width 100%
  &_lg
    line-height 2.25rem
    padding 0 1.4rem
    font-size 1.15rem
