.button
  position relative
  top 0
  display inline-block
  padding 0 1rem
  line-height 2rem
  border 0
  background color_red
  color white
  font-size 1rem
  text-align center
  cursor pointer
  text-decoration none
  //border-radius 2px
  transition .2s
  &:hover
    background #c81e1e
  &_block
    width 100%
  &_lg
    line-height 2.5rem
    padding 0 1.4rem
    font-size 1.15rem
  &_xl
    line-height 2.75rem
    padding 0 2.5rem
    font-size 1.35rem
  &_long
    min-width 180px
