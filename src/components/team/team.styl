.teamMember
  padding-top 15px
  padding-bottom 15px
  &__container
    display flex
    justify-content space-around
    flex-wrap wrap
  &, &__photo
    width 300px
    @media (max-width 992px)
      width 200px
    @media (max-width 460px)
      width 260px
  &__photo
    height 300px
    background-size cover
    @media (max-width 992px)
      height 200px
    @media (max-width 460px)
      height 260px
  &__info
    padding-top .5rem
  &__name
    padding 0
    font-size 1.15rem
    font-weight 500
  &__position
    margin 0
    padding 0
