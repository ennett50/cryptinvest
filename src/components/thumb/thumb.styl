.thumb
  &__header
    position relative
    line-height 1.15
    font-size 1.5rem
    font-weight 500
    &_big
      font-size 5rem
      font-weight 500
      @media (max-width 768px)
        font-size 3.5rem
    &:after
      content ''
      position absolute
      bottom 0
      left 0
      display block
      width 90px
      height 3px
      background color_red
  &__caption
    font-size 1.5rem
    @media (max-width 768px)
      font-size 1.5rem
  &_preview
    text-align center
    .thumb
      &__header
        padding-top .5rem
        padding-bottom .5rem
        &:after
          display none
      &__description
        margin-top 0
