.sectionHeader
  position relative
  margin-bottom 3.5rem
  text-align center
  font-weight 700
  font-size 2.5rem
  @media (max-width 768px)
    margin-bottom 2.5rem
    font-size 1.5rem
  &:after
    content ''
    position absolute
    bottom 0
    left 50%
    height 4px
    width 100px
    margin-left -(@width / 2)
    background color_red
